%html{html_attrs}
  %head
    %title= title_for "PotatoMen"
    = javascript_include_tag :defaults, 'jquery.rotate.js', :cache => true 
    = javascript_include_tag 'jquery-ui-personalized-1.5.2.min.js'
    = stylesheet_link_tag 'reset-fonts-grids'
    = stylesheet_link_tag 'sprite'
    = stylesheet_link_tag 'admin'
    = stylesheet_link_tag 'tables'
    = stylesheet_link_tag 'tree'
    = stylesheet_link_tag 'flashes'
    = stylesheet_link_tag 'jquery-ui-themeroller.css'
    - if params[:controller] == 'potato_men'
      = javascript_include_tag 'potatomen/buildapotatoman.js'
  %body{ :class => params[:controller], :id => params[:action] }
    = display_standard_flashes
    #header
      %h1
        %span.logo
        %span Potato Men
      - if logged_in?
        .login-container
          = link_to "Log Out", "/logout"
      - else
        = render :partial => '/sessions/new'
      #toolbar
        = render :partial => "/shared/nav/tabs"
    #sidebar
      = yield :sidebar
    #doc2.yui-t7
      #bd
        .yui-g
          =yield
      #ft
        .content
          Built by the folks at
          = link_to "Isotope11", "http://www.isotope11.com"
